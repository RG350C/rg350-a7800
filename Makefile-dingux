ATARI_VERSION=1.1.0

TARGET = dingux-7800
SDL_CONFIG = $(DINGUXDEV)/bin/sdl-config
OBJS = gp2x_psp.o \
cpudingux.o \
  psp_main.o psp_kbd.o psp_joy.o psp_sdl.o psp_font.o \
  psp_fmgr.o psp_menu.o  psp_menu_kbd.o psp_menu_set.o \
  psp_menu_joy.o \
  psp_menu_help.o psp_sound.o \
  Sound.o \
  global.o \
  psp_menu_cheat.o \
  psp_menu_list.o \
  psp_editor.o \
  psp_danzeff.o \
  psp_atari.o \
  Bios.o \
  Database.o \
  Common.o \
  Cartridge.o \
  Hash.o \
  Logger.o \
  Maria.o \
  Memory.o \
  Palette.o \
  Pokey.o \
  ProSystem.o \
  Region.o \
  Riot.o \
  Sally.o \
  Tia.o \
  miniunz.o \
  unzip.o \
  zip.o \
  ioapi.o \
  Archive.o


CC=/usr/local/dinguxdev/usr/bin/mipsel-linux-gcc
CXX=/usr/local/dinguxdev/usr/bin/mipsel-linux-g++
STRIP=/usr/local/dinguxdev/usr/bin/mipsel-linux-strip

DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

MORE_CFLAGS = -I. -I$(DINGUXDEV)/usr/include \
-DNOCRYPT \
-DDINGUX_MODE -DNO_STDIO_REDIRECT -DMPU_JZ4740 -DATARI_VERSION=\"$(ATARI_VERSION)\"  \
-mips32 -O3 -D_GNU_SOURCE=1 -D_REENTRANT -DIS_LITTLE_ENDIAN \
-fsigned-char -ffast-math -fomit-frame-pointer \
-fexpensive-optimizations -fno-strength-reduce -funroll-loops  -finline-functions

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) 
LDFLAGS = -static -s

LIBS += -L/opt/mipsel-linux-uclibc/usr/lib \
/opt/mipsel-linux-uclibc/usr/lib/libSDL_image.a \
/opt/mipsel-linux-uclibc/usr/lib/libSDL.a \
-lpng -lz -lm -lpthread -lstdc++ -ldl


.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

.cpp.o:
	$(CXX) $(CFLAGS) -c $< -o $@

$(TARGET): $(OBJS)
	$(CC) $(LDFLAGS) $(CFLAGS) $(OBJS) $(LIBS) -o $(TARGET) && $(STRIP) $(TARGET)

install: $(TARGET)
	cp $< /media/dingux/local/emulators/dingux-7800/

clean:
	rm -f $(OBJS) $(TARGET)

ctags: 
	ctags *[ch] emucore/*[chp] common/*[chp]
